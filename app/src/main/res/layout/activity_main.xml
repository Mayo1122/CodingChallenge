<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cardview_dark_background">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coding_challenge_demo"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/eyeColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eye_colors"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/populations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plant_populations"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/eyeColors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/films"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/populations"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>